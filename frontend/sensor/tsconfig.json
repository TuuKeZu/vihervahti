{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./bin",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["./*"]
}
